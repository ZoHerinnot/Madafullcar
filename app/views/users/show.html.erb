<div class="container">
    <div class="row my-2">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#messages" data-toggle="tab" class="nav-link">Messages</a>
                </li>
            </ul>

            <!-- Profil -->

            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <h5 class="mb-3">Votre espace personnel</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>A propos de vous:</h6>
                            <p>
                              Nom: <%=@user.first_name%><br>								
										Prénom: <%=@user.last_name%><br>
										Nombre d'annonce(s) effectué(e): <%=@user.cars.count%>
										<i class="fa fa-eye"></i>
                            </p>
                            
                        </div>
                        <div class="col-md-6">
                           <h6>Vos listes des ventes</h6>
								<ol>
									<%for i in 0..(@user.cars.length-1)%>
									<li>
										<%if @user.cars[i].option == "Vente"%>
											<span><%=@user.cars[i].mark.name%>  <%=@user.cars[i].model.name%></span>
											<a href="/car/<%=@user.cars[i].id%>"><i class="fa fa-eye"></i> </a><br>
											Ar <span> <%=@user.cars[i].price%></span>
											<%else%>
											<span>Vous n'avez pas d'annonce de vente</span>
										<%end%>
									</li>
									<%end%>
								</ol>

								<hr class= "badge-dark">
								<h6>Vos listes des locations</h6>
								<ol>
									<%for i in 0..(@user.cars.length-1)%>
									<li>
										<%if @user.cars[i].option == "Location"%>
											<span><%=@user.cars[i].mark.name%>  <%=@user.cars[i].model.name%></span>
											<a href="/car/<%=@user.cars[i].id%>"><i class="fa fa-eye"></i> </a><br>
											Ar <span> <%=@user.cars[i].price%></span>
											<%else%> 
											<span>Vous n'avez pas d'annonce de location</span>
										<%end%>
									</li>
									<%end%>
								</ol>
                          
                        </div>
								
                        <div class="col-md-12">
                           
                            
                        </div>
                    </div>
                    <!--/row-->
                </div>

                <!-- message -->
                <div class="tab-pane" id="messages">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">×</a> This is an <strong>.alert</strong>. Use this to show important messages to the user.
                    </div>
                    <table class="table table-hover table-striped">
                        <tbody>                                    
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">3 hrs ago</span> Here is your a link to the latest summary report from the..
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">Yesterday</span> There has been a request on your account since that was..
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/10</span> Porttitor vitae ultrices quis, dapibus id dolor. Morbi venenatis lacinia rhoncus. 
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/4</span> Vestibulum tincidunt ullamcorper eros eget luctus. 
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/4</span> Maxamillion ais the fix for tibulum tincidunt ullamcorper eros. 
                                </td>
                            </tr>
                        </tbody> 
                    </table>
                </div>

 
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
          <%if @user.avatar.attached?%>
        <%= image_tag @user.avatar,class:"card-img", alt: 'avatar' %>
        <%else%>
            <img src="//placehold.it/150" class="mx-auto img-fluid img-circle d-block" alt="avatar">
        <%end%>
            <h6 class="mt-2">Ajouter/Modifier la photo de profil</h6>
            <p> 
            <%= form_tag user_avatars_path(@user), multipart: true do %>
            <%= file_field_tag :avatar %> <br>
            <%= submit_tag "mettre à jour" %><br>
            <% end %>
            </p>
        </div>
    </div>
</div>


<div >
    <a href="/users/edit" class="btn btn-outline-info edit1">Editer votre profil</a>
</div>


