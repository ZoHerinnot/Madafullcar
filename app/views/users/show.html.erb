<div class= "user-show">
<div class="profil">
  <div class="card-deck">
    <div class="card">
    <%if @user.avatar.attached?%>
    <%= image_tag @user.avatar,class:"card-img-top", alt: 'avatar' %>
    <%else%>
    <p> **Ajouter votre photo de profil*** </p>
    <%end%>
    <p>
        <%= form_tag user_avatars_path(@user), multipart: true do %>
        <%= file_field_tag :avatar %> <br>
        <%= submit_tag "mettre Ã  jour" %><br>
        <% end %>
    </p>
    <div class="card-body">
      <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %> </h5>
      <p class="card-text">Email :  <%= @user.email %> </p>
      <p class="card-text"><small class="text-muted">
        <a href="<%= edit_user_registration_path %>">Modifier les profil d'enregistrement
        </a>
        </small>
      </p>
    </div>
  </div>
</div> 
