
   <div class="error_messages">
     <%= render "devise/shared/error_messages", resource: resource %>
   </div>
<div class="form-sign-up form">
  <div class="container">
      <h2>S'inscrire</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.label :Nom %><br >
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  class:"form-control", placeholder:"Votre nom", required: 'true' %>
              </div>
              <div class="form-group col-md-6">
              <%= f.label :PrÃ©nom %><br>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",  class:"form-control", placeholder:"Votre PrÃ©nom", required: 'true' %>
              </div>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", placeholder:"exemple@exemple.com", required: 'true' %>
          </div>

          <div class="field">
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.label :Mot_de_passe %>
                <%= f.password_field :password, autocomplete: "new-password",  class:"form-control", placeholder:"Votre mots de passe  (6 characters minimum)", required: 'true' %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label :Veuillez_confirmer %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Veuillez confirmer", required: 'true' %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "S'inscrire", class: 'btn btn-primary' %>
          </div>
      <% end %> 
      <%= render "devise/shared/links" %>
    
  </div>
</div>
