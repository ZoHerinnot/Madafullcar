<div class="form abonner">
  <% if @gold != nil %>
    <div class="col-sm-6">
            <div class="card width1">
              <!-- <img src="images/car6.jpg" class="card-img-top" alt="..."> -->
              <%=image_tag("car11.jpg",class:"card-img-top", alt: "Example Image")%>
                <div class="card-body color">
                    <h4 class="card-title">Gold</h4>
                    <p class="card-text">Votre êtes abonnés sur Madafullcar.</p>
          			<a href="/golds/<%=@gold.id%>" data-method="delete" class="btn btn-danger">désabonée</a>
               </div>
              </div>
          </div>
          
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="card width">
            <!-- <img src="..." class="card-img-top" alt="..."> -->
            <%=image_tag("car12.jpg",class:"card-img-top", alt: "Voiture")%>
              <div class="card-body color">
                <h4 class="card-title" class="text-center"> Gold</h4>
                <p class="card-text">Abonnez-vous pour profiter des annonces illimité </p>
                    <%= form_tag golds_path do %>
                      <article>
                        <% if flash[:error].present? %>
                          <div id="error_explanation">
                            <p><%= flash[:error] %></p>
                          </div>
                        <% end %>
                        <label class="amount">
                          <p>99000 Ar</p>
                        </label>
                      </article>
                      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                              data-description="Un mois d'abonnement"
                              data-amount="9900000 ariary"
                              data-locale="auto"></script>
                    <% end %>
              </div>
          </div>
        </div>

        <% if @premium != nil %>
          <div class="col-sm-6">
            <div class="card width">
              <!-- <img src="images/car6.jpg" class="card-img-top" alt="..."> -->
              <%=image_tag("car15.jpg",class:"card-img-top", alt: "Example Image")%>
                <div class="card-body color">
                    <h4 class="card-title" class="text-center">Premium</h4>
                    <p class="card-text">Votre êtes abonnés sur Madafullcar.</p><br><br>
          			<a href="/premiums/<%=@premium.id%>" data-method="delete" class="btn btn-danger">désabonée</a>
               </div>
            </div>
          </div>
        <% else %>
          <div class="col-sm-6">
            <div class="card width">
              <!-- <img src="images/car6.jpg" class="card-img-top" alt="..."> -->
              <%=image_tag("car14.jpg",class:"card-img-top", alt: "Voiture")%>
                <div class="card-body color">
                    <h4 class="card-title" class="text-center"> Prémium</h4>
                    <p class="card-text">Abonnez-vous pour profiter des annonces illimité.</p>
                    <%= form_tag premiums_path do %>
                      <article>
                        <% if flash[:error].present? %>
                          <div id="error_explanation">
                            <p><%= flash[:error] %></p>
                          </div>
                        <% end %>
                        <label class="amount">
                          <p>50000 Ar</p>
                        </label>
                      </article>
                      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                              data-description="Un mois d'abonnement"
                              data-amount="5000000 ariary"
                              data-locale="auto"></script>
                    <% end %>
                  </div>
              </div>
          </div>
        <% end %>
      </div>        
    </div>
  <% end %>
</div>